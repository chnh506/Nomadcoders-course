extends base.pug

block content
  div 
    video#preview
    button#recordBtn Start Recording
  if errorMessage 
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video File 
    input(id="video" name="video" type="file" accept="video/*" required)
    label(for="title") Title
    input(id="title" name="title" type="text" placeholder="Title" required)
    label(for="description") Description 
    input(id="description" name="description" type="text" placeholder="Description" required)
    label(for="hashtags") Hashtags  
    input(id="hashtags" name="hashtags" type="text" placeholder="Hashtags (separated by comma)" required)
    input(type="submit" value="Upload Video") 

block scripts 
  script(src="/static/js/recorder.js")