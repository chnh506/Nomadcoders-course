extends ../base.pug


block content
  if errorMessage 
    span=errorMessage
  form(method="post")
    label(for="old-password") 예전 비밀번호 
    input(id="old-password" name="oldPassword" type="password" placeholder="Old Password" required)
    label(for="new-password") 새 비밀번호
    input(id="new-password" name="newPassword" type="password" placeholder="New Password" required)
    label(for="new-password-confirm") 새 비밀번호 확인
    input(id="new-password-confirm" type="password" name="newPassword2" placeholder="New Password Confirmaion" required) 
    input(type="submit" value="Change Password")